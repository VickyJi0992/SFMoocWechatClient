/* pages/explore/search.wxss */
.page {
  height: 100vh;
  background: #FFF;
}
.inputSearch {
  height: 50px;
  border: 2px solid #FFF;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.close {
  position: absolute;
  right: 85px;
  top: 15px;
  width: 20px;
  height: 20px;
  text-align: center;
  line-height: 20px;
  border-radius: 50%;
  background: grey;
}

.inputSearch input {
  width: 70%;
  height: 30px;
  background: #e8e8ed;
  border-radius: 30px;
  padding-left: 15px;
  font-size: 14px;
  margin-left: 5%;
  /*这里有问题需要在调节*/
}

.inputSearch button {
  width: 55px;
  height: 30px;
  font-size: 12px;
}

.message {
  position: relative;
  margin-top: 15px;
}

.message .operation {
  position: absolute;
  right: 10px;
  top: 0;
  font-size: 12px;
  color: #0076cb;
}

.title {
  font-size: 16px;
  font-weight: 600;
  padding: 5px 10px;
}

.message .list {
  display: inline-block;
  font-size: 12px;
  background: #e8e8ed;
  border-radius: 5px;
  padding: 5px 8px;
  margin: 10px 0 0 10px;
}

.searchSubmit {
  background: #0076cb;
  color: #fff;
}
.searchResultCount {
  border-bottom: 1px solid #aaa;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #71777D;
}
.searchResult {
  padding: 0 15rpx;
  background: #FFF;
}

.result {
  height: 50px;
  line-height: 50px;
  width: 100%;
  text-align: left;
  border-bottom: 1px solid #eee;
  padding-left: 25px;
  color: #333;
  font-family: "微软雅黑";
  font-size: 16px;
}
