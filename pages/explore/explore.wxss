.filterIcon {
  width: 80rpx;
}
.filterIcon image {
  width: 60%;
  height: 60%;
  margin: 15rpx 15rpx 0 0;
}
.tabItem {
  margin:0 36rpx;
  display: inline-block;
}
.tabItem.active{
  color: #0076cb;
  position: relative;
}
.tabItem.active:after{ 
  content: "";
  display: block;
  height: 8rpx;
  width: 52rpx;
  background: #0076cb;
  position: absolute; 
  bottom: 0;
  left: 15rpx;
  border-radius: 16rpx;
}
.tabContent {
  margin-top: 160rpx;
  padding: 0 15rpx;
}

.noDataMsg {
  text-align: center;
  color: #71777D;
  margin-top: 45%;
}

.popup-container {
  width: 60vw;
	height: 80vh;
  margin-top: -23vh;
	background: #fff;
}

.popup-container button{
  width: 120rpx;
  color: #FFF;
  background: #0076cb;
  font-size: 28rpx;
  float: right;
  margin: 10rpx 10rpx 0 0;
}
