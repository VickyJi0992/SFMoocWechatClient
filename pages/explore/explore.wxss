/* pages/notice/notice.wxss */
.page {
  background: #FFF;
}
.exploreHeader {
  padding: 10rpx;
  text-align: center;
  position:fixed;
  z-index: 6;
  top:0;
  left:0;
  width:100%;
  background:#FFF;
}
.exploreHeader .searchInput {
  height: 60rpx;
}
.exploreHeader input {
  border-radius:35rpx;
  border:1px solid #CCC;
  width:90%;
  margin:0 auto;
}
.tabbarWrapper {
  display: flex;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 16px; 
  overflow: hidden;
  box-sizing: border-box;
  white-space: nowrap;
}
