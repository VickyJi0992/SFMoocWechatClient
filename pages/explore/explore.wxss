/* pages/notice/notice.wxss */
.page {
  background: #FFF;
}
.exploreHeader {
  padding: 10rpx;
  text-align: center;
  position:fixed;
  z-index:99;
  top:0;
  left:0;
  width:100%;
  background:#FFF;
}
.exploreHeader input {
  border-radius:35rpx;
  border:1px solid #CCC;
  width:90%;
  margin:0 auto;
}
.categoryTabBar {
  height: 80rpx;
  width: 100%; 
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  font-size: 16px; 
  white-space: nowrap;
  /* position: fixed;
  top: 70rpx; 
  left: 0; 
  z-index: 99; */
}
.tabItem {
  margin:0 36rpx;
  display: inline-block;
}
.tabItem.active{
  color: #0076cb;
  position: relative;
}
.tabItem.active:after{ 
  content: "";
  display: block;
  height: 8rpx;
  width: 52rpx;
  background: #0076cb;
  position: absolute; 
  bottom: 0;
  left: 15rpx;
  border-radius: 16rpx;
}
.tabContent {
  margin-top: 160rpx;
  padding: 0 15rpx;
}
.eventItem {
  display: flex;
  height: 200rpx;
}
.eventItem .leftContent >image {
  width: 200rpx;
  height: 133rpx;
}
.leftContent {
  margin: 0 auto;
}
.leftContent, .rightContent {
  display: inline-block;
}
.rightContent {
  margin-left: 8rpx;
  padding-left: 6rpx;
  flex: 1;
}
.rightContent .title text {
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #333;
  line-height: 1.25rem;
}
.speaker, .location {
  font-size: 24rpx;
  margin-top: 6rpx;
}
.location {
  color: #71777D;
}
.count {
 float: right;
}
.count image {
  margin-right: 4rpx;
  width: 24rpx;
  height: 24rpx;
}