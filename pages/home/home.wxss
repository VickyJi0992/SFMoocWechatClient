.myInfoCard {
  display:flex;
  align-items:center;
  width: 95%;
  background: #0076cb;
  border-radius: 10rpx;
  margin: 0 auto;
  color: #FFF;
  height:200rpx;
  background-image: linear-gradient(to right , #7A88FF, #7AFFAF);
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 0 30rpx;
  border-radius: 50%;
  border: 1px solid #FFF;
}
.userinfoCredits{
  display: flex;
  flex-flow: row;
  align-items: center;
}
.userinfoCredits .userinfoPointsDetail {
  display: flex;
  align-items: center;
  margin-left: 10rpx;
  font-size: 20rpx;
  padding-left: 10rpx;
  border-radius: 20rpx;
  text-align: center;
  background: #003399;
}
.loginButton {
  margin-top: 55px;
  width: 50%;
}
.navIcon {
  width: 16rpx; 
  height: 20rpx;
}

#generateCodeModal view {
  display: flex;
}
#generateCodeModal text {
  flex: 1 1 auto;
  text-align: center;
}
.page__bd{
  padding-top: 220rpx;
  background: #FFF;
}

.weui-navbar {
  position: fixed;
  z-index: 1;
  top: 220rpx;
  background: #FFF;
  border-top: 1rpx solid #ccc;
  border-bottom: none;
}

.weui-tab__panel {
  border: none;
  height: 100vh;
}

.weui-tab__content{
    padding:10px 14rpx 0;
    background:#f6f7f8;
    border: none;
}

.weui-navbar__slider {
  width: 6em;
}

.session-create-btn {
  position:fixed;
  right:50px;
  bottom:50px;
  width: 50px;
  height: 50px;
  border-radius: 25px;
  background: #0076cb;
}

.session-create-btn::before {
  content: '+';
  position: absolute;
  top: -2px;
  left: 16px;
  color: #fff;
  font-size: 30px;
}
