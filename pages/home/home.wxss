/* pages/home/home.wxss */
.userinfo{
  position: relative;
  width: 100%;
  height: 300rpx;
  background: #FFF;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* .userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
} */

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 30rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #000000;
}

.loginButton {
  margin-top: 55px;
  width: 50%;
}
.navIcon {
  margin-right: 18rpx;
  vertical-align: middle;
  width: 48rpx; 
  height: 48rpx;
}

#generateCodeModal view {
  display: flex;
}
#generateCodeModal text {
  flex: 1 1 auto;
  text-align: center;
}
.page__bd{
  background: #FFF;
}

.weui-navbar {
  border-top: 1rpx solid #ccc;
  border-bottom: none;
}

.weui-tab__panel{
  border: none;
}

.weui-tab__content{
    padding:10px 14rpx 0;
    background:#f6f7f8;
    border: none;
}

.weui-navbar__slider {
  width: 6em;
}

.session-create-btn {
  position:fixed;
  right:50px;
  bottom:50px;
  width: 50px;
  height: 50px;
  border-radius: 25px;
  background: #0076cb;
}

.session-create-btn::before {
  content: '+';
  position: absolute;
  top: -2px;
  left: 16px;
  color: #fff;
  font-size: 30px;
}
