.page {
  padding: 0 20rpx 10rpx;
  background: #fff;
}

.flex-item {
  margin-bottom: 40rpx;
  font-size: 14px;
}

.session-detail-header {
  position: relative;
  width: 100%;
  background: #fff;
}

.session-header-bg {
  width: 100%;
}

.session-avatar-wrapper {
  position: absolute;
  top: 264rpx;
  left: 40rpx;
  width: 60px;
  height: 60px;
  border: 4px #fff solid;
  border-radius: 5px;
  background: #fff;
}

.event-detail-avatar {
  width: 60px;
  height: 60px;
  border-radius: 5px;
}

.event-detail-nickname {
  position: absolute;
  top: 412rpx;
  left: 44rpx;
  font-size: 14px;
  color: #fff;
}

.session-detail-topic {
  font-size: 20px;
  font-weight: bold;
}

.flex-item view {
  font-weight: bold;
}

.flex-item text {
  font-size: 13px;
}

.session-detail-action .flex-item {
  margin-bottom: 10rpx;
}

.uniformBtn {
  width: 100%;
}

button[disabled]:not([type]) {
  color:rgba(255, 255, 255, 0.6);
  background:#5B9CCB;
}
