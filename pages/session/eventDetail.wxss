.page {
  padding: 0 20rpx 10rpx;
  background: #fff;
}

.flex-item {
  margin-bottom: 40rpx;
  font-size: 14px;
}

.session-detail-header {
  position: relative;
  width: 100%;
  background: #fff;
}

.session-header-bg {
  width: 100%;
}

.session-avatar-wrapper {
  position: absolute;
  left: 26rpx;
  bottom: 92rpx;
  width: 60px;
  height: 60px;
  border: 4px #fff solid;
  border-radius: 5px;
  background: #fff;
}

.event-detail-avatar {
  width: 60px;
  height: 60px;
  border-radius: 5px;
}

.event-detail-nickname {
  position: absolute;
  left: 26rpx;
  bottom: 36rpx;
  font-size: 14px;
  color: #fff;
}

.session-detail-topic {
  font-size: 20px;
  font-weight: bold;
}

.flex-item view {
  font-weight: bold;
}

.flex-item text {
  font-size: 13px;
}

.session-detail-action .flex-item {
  margin-bottom: 10rpx;
}

.uniformBtn {
  width: 100%;
}

button[disabled]:not([type]) {
  color:rgba(255, 255, 255, 0.6);
  background:#5B9CCB;
}
.reward {
  color: #0076cb;
  border: 1px solid #0076cb;
  text-align: center;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
}
.reward image {
  width: 60rpx;
  height: 60rpx;
}

.likeBtn {
  width: 60rpx;
  height: 60rpx;
  display: block;
}

.likeBtnMsg {
  display: inline-block;
  padding: 10rpx;
  color: #5B9CCB;
}

.likeView {
  display: inline-flex;
}
